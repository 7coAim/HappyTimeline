<%= form_with(model: @timeline, url: timelines_path, local: true) do |form| %>
<%= form.hidden_field :title %>
<%= form.hidden_field :to_name %>
<%= form.hidden_field :from_name %>
<%= form.hidden_field :memo %>

<div class="form-group my-3">
  <label for="inputTimelineTitle">タイムラインのタイトル</label>
  <%= form.text_field :title, class: 'form-control form-control-lg', readonly: 'readonly', id: 'inputTimelineTitle' %>
</div>
<div class="form-group my-3">
  <label for="inputTimelineToName">メッセージをお贈りする相手のお名前・名称</label>
  <%= form.text_field :to_name, class: 'form-control form-control-lg', readonly: 'readonly', id: 'inputTimelineToName' %>
</div>
<div class="form-group my-3">
  <label for="inputTimelineFromName">贈り主のお名前・名称</label>
  <%= form.text_field :from_name, class: 'form-control form-control-lg', readonly: 'readonly', id: 'inputTimelineFromName' %>
</div>
<div class="form-group my-3">
  <label for="inputTimelineMemo">参加メンバへのメモ（編集ロックすると非表示になります）</label>
    <%= form.text_area :memo, class: 'form-control form-control-lg', readonly: 'readonly',  id: 'inputTimelineMemo' %>
</div>


<div class="my-4">
  <%= form.submit "作成する", class: 'btn btn-primary btn-lg badge-pill btn-block' %>
</div>

<% end %>

<%= form_with(model: @timeline, url: new_timeline_path, local: true, method: 'get') do |form| %>
<%= form.hidden_field :title %>
<%= form.hidden_field :to_name %>
<%= form.hidden_field :from_name %>
<%= form.hidden_field :memo %>
<div class="my-4">
<%= form.submit "もどる", class: 'btn btn-secondary btn-lg badge-pill btn-block', name: 'back' %>
</div>

<% end %>
