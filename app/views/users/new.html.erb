<div class="row justify-content-center">
  <div class="col-lg-5">

    <h1 class="text-center mt-3">新規登録</h1>
    <hr>
    <p class="text-muted text-center my-4">メールアドレスで新規登録する</p>

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible my-3" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span></button>
        <strong>お知らせ</strong>
        ：
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger alert-dismissible my-3" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span>
        </button>
        <strong><%= @user.errors.count %>件のエラーがあります。ご確認ください。</strong>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group my-3">
      <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: "Name：ハッピー太郎" %>
    </div>
    <div class="form-group my-3">
      <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: "Email：sample@happy.com" %>
    </div>
    <div class="form-group my-3">
      <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: "Password（6文字以上）" %>
    </div>
    <div class="form-group my-3">
      <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: "Password（確認用）" %>
    </div>
    <div class="form-group my-3">
      <div class="card card-body m-0 p-3">
      アイコン画像（任意）
      <%= f.file_field :icon, class: 'form-control-file', id: :user_image%>
      </div>
    </div>

    <div class="my-5">
      <%= f.submit "新規登録", class: 'btn btn-primary btn-lg badge-pill btn-block' %>
    </div>

  <% end %>

</div>
</div>
