<div class="row justify-content-center">
  <div class="col-lg-5">

    <h1 class="text-center mt-3">ログイン</h1>
    <hr>
    <p class="text-muted text-center my-4">メールアドレスでログインする</p>

    <% flash.each do |key, value| %>
      <div class="alert alert-warning alert-dismissible my-3" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span>
        </button>
        <%= content_tag(:div, value, class: "#{key}") %>
      </div>
    <% end %>

    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

      <div class="form-group my-3">
        <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: "Email" %>
      </div>
      <div class="form-group my-3">
        <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: "Password" %>
      </div>
      <div class="my-5">
        <%= f.submit "ログイン", class: 'btn btn-primary btn-lg badge-pill btn-block' %>
      </div>

    <% end %>

  </div>
</div>
